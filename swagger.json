{
  "swagger": "2.0",
  "info": {
    "title": "Contacts API",
    "description": "This is a contact API",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": ["http"],
  "paths": {
    "/": {
      "get": {
        "description": "",
        "responses": {
          "200": { "description": "OK" }
        }
      }
    },
    "/contacts/": {
      "get": {
        "description": "",
        "produces": ["application/json"],
        "responses": {
          "200": { "description": "OK" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "post": {
        "description": "Create a new contact",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": { "$ref": "#/definitions/Contact" }
          }
        ],
        "responses": {
          "201": { "description": "Created" },
          "400": {
            "description": "Validation Error",
            "schema": { "$ref": "#/definitions/ValidationError" }
          },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/contacts/{id}": {
      "get": {
        "description": "Get a single contact by ID",
        "produces": ["application/json"],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "OK" },
          "400": {
            "description": "Invalid ID format",
            "schema": { "$ref": "#/definitions/ValidationError" }
          },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "put": {
        "description": "Update an existing contact",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          { "name": "body", "in": "body", "schema": { "$ref": "#/definitions/Contact" } }
        ],
        "responses": {
          "201": { "description": "Updated" },
          "400": {
            "description": "Validation Error",
            "schema": { "$ref": "#/definitions/ValidationError" }
          },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "delete": {
        "description": "Delete a contact",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "Deleted" },
          "400": {
            "description": "Invalid ID format",
            "schema": { "$ref": "#/definitions/ValidationError" }
          },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      }
    }
  },
  "definitions": {
    "Contact": {
      "type": "object",
      "properties": {
        "firstName": { "type": "string", "example": "John" },
        "lastName": { "type": "string", "example": "Doe" },
        "email": { "type": "string", "example": "john@example.com" },
        "favoriteColor": { "type": "string", "example": "Blue" },
        "birthday": { "type": "string", "example": "1990-05-20" }
      },
      "required": ["firstName", "lastName", "email"]
    },
    "ValidationError": {
      "type": "object",
      "properties": {
        "errors": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "msg": { "type": "string", "example": "First name is required" },
              "param": { "type": "string", "example": "firstName" },
              "location": { "type": "string", "example": "body" }
            }
          }
        }
      }
    }
  }
}
